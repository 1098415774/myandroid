<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 设置透明背景色 -->
    <solid android:color="#CB968C8C" />

    <!-- 设置一个黑色边框 -->
    <stroke
        android:width="2px"
        android:color="#CB968C8C" />
    <!-- 设置四个圆角的半径 -->
    <corners
        android:bottomLeftRadius="7px"
        android:bottomRightRadius="7px"
        android:topLeftRadius="7px"
        android:topRightRadius="7px" />
    <!-- 设置一下边距,让空间大一点 -->
    <padding
        android:bottom="2dp"
        android:left="4dp"
        android:right="4dp"
        android:top="2dp" />

</shape>